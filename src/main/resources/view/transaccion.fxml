               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
             </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ComboBox fx:id="comboTransaccion" prefHeight="42.0" prefWidth="208.0" promptText="Tipo de transaccion" />
                  <Button mnemonicParsing="false" onAction="#programar" text="Programar" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
       <Button onAction="#volver" text="Volver" />
       <Label fx:id="lblError" style="-fx-text-fill:red;" />
   </children>
